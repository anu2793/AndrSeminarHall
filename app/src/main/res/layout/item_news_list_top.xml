<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/value_10dp"
        android:paddingRight="@dimen/value_10dp">

        <ImageView
            android:id="@+id/imv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/imv_arrow"
            android:visibility="gone" />

        <jp.co.hiropro.seminar_hall.view.TextViewApp
            android:id="@+id/news_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/imv_arrow"
            android:lineSpacingExtra="@dimen/value_8dp"
            android:paddingTop="@dimen/value_10dp"
            android:paddingRight="@dimen/value_8dp"
            android:paddingBottom="@dimen/value_15dp"
            android:text="@string/app_name"
            android:textColor="@color/color_content"
            card_view:fontFamilyApp="hiramaru" />
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:background="@color/line"
        android:visibility="gone" />
</LinearLayout>

